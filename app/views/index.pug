doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title FoodShare - Green Tech
    link(rel="stylesheet", href="/css/style.css")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css", integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=", crossorigin="")
    script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js", integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=", crossorigin="")
  body
    header
      div.container.header-content
        h1.logo FoodShare üåø
        div.search-container
          input#search-input(type="text", placeholder="Search for food...")
        nav
          div.user-switcher
            label(for="user-select") Personas:
            select#user-select
              option(value="1") üë®‚Äçüç≥ Sameer (Donor)
              option(value="2") üë®‚Äçüéì Mahesh (Receiver)
              option(value="3") ü•ñ Prativa (Business)
          button#btn-donate.btn.btn-primary Donate Food
          button#btn-login.btn.btn-secondary Login

    main.container
      section.hero
        h2 Share Food, Reduce Waste
        p Connect with your community to share surplus food and help the planet.

      div.main-content-layout
        aside.sidebar
          h3 Categories
          ul.category-list
            li: a(href="#", data-category="all") All Items
            li: a(href="#", data-category="1") Bakery
            li: a(href="#", data-category="2") Produce
            li: a(href="#", data-category="3") Canned Goods
            li: a(href="#", data-category="4") Dairy
            li: a(href="#", data-category="5") Other

        div.content-area
          section.map-section
            h3 Food Map
            div#map-container
              div#map

          section.food-grid-section
            h3 Available Food Near You
            div#food-grid.food-grid
              //- Food items will be injected here by JS
              p.loading Loading fresh items...

    //- Modal for Adding Food
    div#donate-modal.modal.hidden
      div.modal-content
        span.close &times;
        h2 Post Food Item
        form#donate-form
          div.form-group
            label(for="title") Item Title
            input(type="text", id="title", name="title", required)
          div.form-group
            label(for="description") Description
            textarea(id="description", name="description", required)
          div.form-group
            label(for="category_id") Category
            select(id="category_id", name="category_id")
              option(value="1") Bakery
              option(value="2") Produce
              option(value="3") Canned Goods
              option(value="4") Dairy
              option(value="5") Other
          div.form-group
            label(for="expiry_date") Expiry Date/Time
            input(type="datetime-local", id="expiry_date", name="expiry_date", required)
          div.form-group
            label(for="image") Upload Image (URL for demo)
            input(type="text", id="image", name="image_url", placeholder="/img/food-item.png")
          
          button(type="submit").btn.btn-primary Post Item

    footer.container
      p &copy; 2026 FoodShare Green Tech. Created by:
      ul.team-list
        li Sameer Chaudhary Tharu
        li Mahesh Batala
        li Dhiraj Yadav
        li Prativa Rai
        li Rupesh Shah

    script(src="/js/main.js")
